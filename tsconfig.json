{
  "compilerOptions": {
    "incremental": true,
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@layers/*": [
        "./layers/*"
      ]
    }
  },
  "lib": [
    "es2015"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules"
  ]
}
